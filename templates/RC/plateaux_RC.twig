{% extends "RC/baseRC.html.twig" %}
                
    {% block ContentRC %}
    <style>
        .bg{

            width:100%;
        }
        h1{
        text-align: center;
        background: linear-gradient(359deg, #00ffe7 0%,#0200ff 100%);
        font-size: 3em;
        -webkit-background-clip :text;
        -webkit-text-fill-color:transparent;
        text-align : center;
        font-weight:bold;
        }
        .navbar{
            position: sticky;
            top: 0;
            z-index: 100;
        }
    </style>
    
    <div id="wrapper " class="bg">
        <div id="content-wrapper" class="d-flex flex-column ">
            <div id="content " >
                <div class="container-fluid " id="page-top">
                    <h1 class="h3 my-3">Ajouter un nouveau plateau</h1>
                    <div class="row ">
                        {{form_start(formPlateau)}} 
                            <div class="form-group my-1">
                                {{form_row(formPlateau.depart)}}
                            </div>
                            <div >
                                <button type="submit" class="btn btn-warning" ><i class="bi bi-plus-lg"></i>Ajouter</button>

                            </div>
                        {{form_end(formPlateau)}}
                    </div>
                    
                    <div class="card shadow my-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">La table des plateaux </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="table_idhe" width="100%" cellspacing="0">
                                    <thead>
                                        <tr class="table-primary">       
                                            <th scope="col">Numéro de plateau</th>   
                                            <th scope="col">Département</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr class="table-primary">
                                            
                                            <th scope="col">Numéro de plateau</th>   
                                            <th scope="col">Département</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                         {% for plateau in plateaux %}
                                            <tr class="table-warning">
                                                <td>{{plateau.id}}</td>
                                                <td>{{plateau.departement.getNomD()}}</td>
                                                <td>
                                                    <a href="{{path('RC_suppPLAT',{'id':plateau.id}) }}" class= "btn btn-info btn-sm"><i class="bi bi-trash-fill"></i> Delete</a>
                                                </td>
                                            </tr>
                                        {% endfor %} 
                                    </tbody>
        
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>   
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src=" {{asset('vendor/jquery-easing/jquery.easing.min.js')}}"></script>
    <script src=" {{asset('js/sb-admin-2.min.js')}}"></script> 
    <script src="  {{asset('vendor/datatables/jquery.dataTables.min.js')}}"></script>
    <script src="  {{asset('vendor/datatables/dataTables.bootstrap4.min.js')}}"></script>
    <script src="  {{asset('js/demo/datatables-demo.js')}}"></script>
    <script>
        $(document).ready( function () {
            $('#table_idhe').DataTable();
        } );
    </script>

    {% endblock %}